
#include <stdio.h>

int main()
{
   int number, right_digit, rev=0;
   
   printf("enter you no.\n");
   scanf("%d", &number);
   while(number != 0)
   {
       right_digit = number%10;
       rev = rev*10 + right_digit;
       number = number/10;
   }
    
    printf("the reverse no. is %d\n", rev);

    return 0;
}
